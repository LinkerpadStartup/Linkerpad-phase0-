<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dummy_layout_for_snackbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linkerpad.linkerpad.AddMaterialsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:layoutDirection="rtl"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:translationX="8dp">

                    <ImageView
                        android:id="@+id/addMaterialsBackIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_arrow_forward" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/iransans_web_light"
                        android:gravity="center_vertical"
                        android:text="افزودن مواد و مصالح ورودی"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/saveMaterialTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="15dp"
                        android:src="@drawable/ic_check_black_24dp" />

                    <!--  <TextView
                          android:id="@+id/saveMaterialTv"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:layout_marginRight="8dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:fontFamily="@font/iransans_web_light"
                          android:foreground="?android:attr/selectableItemBackground"
                          android:gravity="center_vertical"
                          android:padding="8dp"
                          android:text="ذخیره"
                          android:textColor="@color/white"
                          android:textSize="18sp" />-->

                </LinearLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:focusedByDefault="true">

                    <EditText
                        android:id="@+id/TitleMaterialEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/iransans_web_light"
                        android:hint="عنوان"
                        android:inputType="text"
                        android:maxLength="20"
                        android:padding="8dp"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/iransans_web_light"
                    android:padding="4dp"
                    android:text="مثال: میلگرد۱۴"
                    android:textColor="@color/gray600"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="top"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:fontFamily="@font/iransans_web_medium"
                        android:gravity="top"
                        android:text="مقدار ورودی"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/countMaterialsUpArrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_arrow_drop_up_primary" />

                    <EditText
                        android:id="@+id/countMaterialsEdt"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:fontFamily="@font/iransans_web_light"
                        android:gravity="center"
                        android:hint="0.0"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:padding="8dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/countMaterialsDownArrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_arrow_drop_down_primary" />

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/unitMaterialEdt"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/iransans_web_light"
                            android:gravity="center"
                            android:hint="واحد"
                            android:inputType="text"
                            android:maxLength="15"
                            android:padding="8dp"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans_web_light"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="مثال: تن"
                            android:textColor="@color/gray600"
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/descriptionMaterialsEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/iransans_web_light"
                        android:hint="توضیحات"
                        android:maxLength="400"
                        android:padding="8dp"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/iransans_web_light"
                    android:padding="4dp"
                    android:text="مثال: دپو شده در ضلع جنوبی کارگاه"
                    android:textColor="@color/gray600"
                    android:textSize="10sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>
