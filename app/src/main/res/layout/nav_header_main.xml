<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/slide_back"
    android:gravity="bottom"
    android:id="@+id/drawerHeaderll"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:id="@+id/drawerImageView"
        android:src="@drawable/ic_account_circle_blue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="میلاد"
        android:id="@+id/headerNameTv"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
 android:gravity="center"
        android:id="@+id/headerEmailTv"
        android:text="miladkardgar@email.com"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
