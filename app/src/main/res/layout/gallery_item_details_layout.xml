<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:orientation="vertical"
    tools:context="com.linkerpad.linkerpad.GalleryItemDetailsActivity">

    <Space
        android:id="@+id/space1GalleryItem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:clickable="true"
        android:focusable="true" />

    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:transitionName="image"
        app:zoomage_animateOnReset="true"
        app:zoomage_autoCenter="true"
        app:zoomage_zoomable="true"
        app:zoomage_translatable="true"
        app:zoomage_minScale="0.6"
        app:zoomage_maxScale="80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="#66000000"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/picTitleGallTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="عنوان عکس"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/picNameGallTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="ممد جلالی آرانی"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/picDateGallTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="4dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="۱۸:۴۵:۰۳\t\t\t۹۹/۴/۲۴"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>
